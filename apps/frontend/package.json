{
	"name": "messenger-clone",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"db:local": "turso dev -f local.db",
		"db:generate": "drizzle-kit generate --config=./src/lib/db/drizzle.config.ts",
		"db:push": "drizzle-kit push --config=./src/lib/db/drizzle.config.ts",
		"db:studio": "drizzle-kit studio --config=./src/lib/db/drizzle.config.ts",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-node": "^5.2.2",
		"@sveltejs/kit": "^2.5.25",
		"@sveltejs/vite-plugin-svelte": "^3.1.2",
		"@types/eslint": "^8.56.12",
		"autoprefixer": "^10.4.20",
		"eslint": "8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.43.0",
		"globals": "^15.9.0",
		"postcss": "^8.4.41",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.6",
		"svelte": "^4.2.19",
		"svelte-check": "^3.8.6",
		"svelte-intersection-observer": "^1.0.0",
		"tailwindcss": "^3.4.10",
		"tslib": "^2.7.0",
		"typescript": "^5.5.4",
		"typescript-eslint": "7.17.0",
		"vite": "^5.4.2"
	},
	"type": "module",
	"dependencies": {
		"@internationalized/date": "^3.5.5",
		"@lucia-auth/adapter-drizzle": "^1.1.0",
		"@node-rs/argon2": "^1.8.3",
		"backend": "workspace:*",
		"bits-ui": "^0.21.13",
		"clsx": "^2.1.1",
		"cmdk-sv": "^0.0.18",
		"db": "workspace:*",
		"drizzle-orm": "^0.32.2",
		"formsnap": "^1.0.1",
		"lucia": "^3.2.0",
		"lucide-svelte": "^0.412.0",
		"mode-watcher": "^0.3.1",
		"nanoid": "^5.0.7",
		"socket.io-client": "^4.7.5",
		"svelte-sonner": "^0.3.27",
		"sveltekit-superforms": "^2.17.0",
		"tailwind-merge": "^2.5.2",
		"tailwind-variants": "^0.2.1",
		"zod": "^3.23.8"
	}
}
