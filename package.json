{
	"name": "messenger-clone",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"db:generate": "drizzle-kit generate --config=./src/lib/db/drizzle.config.ts",
		"db:push": "drizzle-kit push --config=./src/lib/db/drizzle.config.ts",
		"db:studio": "drizzle-kit studio --config=./src/lib/db/drizzle.config.ts",
		"db:local": "turso dev -f local.db",
		"dev": "bunx --bun vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.2.2",
		"@sveltejs/kit": "^2.5.18",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@types/eslint": "^8.56.10",
		"autoprefixer": "^10.4.19",
		"drizzle-kit": "^0.23.0",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.43.0",
		"globals": "^15.8.0",
		"postcss": "^8.4.39",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"svelte": "^4.2.18",
		"svelte-adapter-bun": "^0.5.2",
		"svelte-check": "^3.8.4",
		"svelte-intersection-observer": "^1.0.0",
		"tailwindcss": "^3.4.6",
		"tslib": "^2.6.3",
		"typescript": "^5.5.3",
		"typescript-eslint": "8.0.0-alpha.30",
		"vite": "^5.3.4"
	},
	"type": "module",
	"dependencies": {
		"@hono/zod-validator": "^0.2.2",
		"@internationalized/date": "^3.5.4",
		"@libsql/client": "^0.6.2",
		"@lucia-auth/adapter-drizzle": "^1.0.7",
		"@node-rs/argon2": "^1.8.3",
		"bits-ui": "^0.21.12",
		"cloudinary": "^2.3.0",
		"clsx": "^2.1.1",
		"cmdk-sv": "^0.0.18",
		"drizzle-orm": "^0.32.0",
		"formsnap": "^1.0.1",
		"hono": "^4.5.1",
		"lucia": "^3.2.0",
		"lucide-svelte": "^0.412.0",
		"mode-watcher": "^0.3.1",
		"nanoid": "^5.0.7",
		"svelte-sonner": "^0.3.27",
		"sveltekit-superforms": "^2.16.1",
		"tailwind-merge": "^2.4.0",
		"tailwind-variants": "^0.2.1",
		"zod": "^3.23.8"
	}
}
