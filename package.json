{
  "name": "messenger-clone",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "db:generate": "drizzle-kit generate --config=./src/lib/db/drizzle.config.ts",
    "db:push": "drizzle-kit push --config=./src/lib/db/drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config=./src/lib/db/drizzle.config.ts",
    "db:local": "turso dev -f local.db",
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.2.1",
    "@sveltejs/kit": "^2.5.10",
    "@sveltejs/vite-plugin-svelte": "^3.1.1",
    "@types/eslint": "^8.56.10",
    "drizzle-kit": "^0.22.7",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.39.3",
    "globals": "^15.4.0",
    "prettier": "^3.3.2",
    "prettier-plugin-svelte": "^3.2.4",
    "svelte": "^4.2.18",
    "svelte-check": "^3.8.0",
    "tslib": "^2.6.3",
    "typescript": "^5.4.5",
    "typescript-eslint": "8.0.0-alpha.30",
    "vite": "^5.3.0"
  },
  "type": "module",
  "dependencies": {
    "@libsql/client": "^0.6.2",
    "@lucia-auth/adapter-drizzle": "^1.0.7",
    "cloudinary": "^2.2.0",
    "drizzle-orm": "^0.31.2",
    "hono": "^4.4.5",
    "lucia": "^3.2.0"
  }
}
